  import nozhaung from '@/assets/littleimg/ms_01.png'
  import jingdain from '@/assets/littleimg/ms_02.png'
  import youwan from '@/assets/littleimg/ms_03.png'
  import zhusu from '@/assets/littleimg/ms_04.png'
  import meishi from '@/assets/littleimg/ms_05.png'
    export default {
        name: "shareFood",
        components:{Five,stars,Header,Footer},
        data() {
            return {

              imglist:[
                {title:'农家菜',src:nozhaung},
                {title:'野味',src:jingdain},
                {title:'土灶菜',src:youwan},
                {title:'海鲜',src:zhusu},
                {title:'小龙虾',src:meishi}
              ],

              food_list:[],//美食
              area1:false,
              area2:false,
              area3:false,
              area4:false,
              scenic_list:[],//景点
              two:['区域','景点'],
              twoNum:0,
              fourSpan:['漂流','烧烤','棋牌','野菜'],
              items: [
                {
                  // 导航名称
                  text: '所有城市',
                  // 该导航下所有的可选项
                  children: [
                    {
                      text: '智能排序',
                      id: 1002
                    },
                    {
                      text: '离我最近',
                      id: 1001
                    },
                    {
                      text: '价格低到高',
                      id: 1003
                    },
                    {
                      text: '价格高到低',
                      id: 1004
                    },
                    {
                      text: '评论最高',
                      id: 1005
                    },
                  ]
                },
              ],//排序
              mainActiveIndex: 0,
              activeId:1001,
              item1:[],//区域
              landscape:[],//景点
              cooking:[],//菜系
              pricelist:[],//价格
              peoplelist:[],//人数


              scenicList:[],
              arearest:'',//区域rest
              landrest:'',//景点rest
              cookrest:'',//菜系rest
              pricerest:'',//价格rest
              peoplerest:'',//人数rest
              num:-1,//价格id
              pnum:-1,//人数id

              isback:true,
              title:'美食',

              loading: false,
              finished: false,
              page:1,
              rows:30,
              total: 1,
            }
        },
        methods: {

          //价格的颜色
          priceSpan(id){
            this.num=id;
            console.log(id)
          },
          //人数的颜色
          peopleSpan(id){
            this.pnum=id;
            console.log(this.pnum)
          },
          reset(){//重置
            this.num=-1;
            this.pnum=-1;
            console.log(this.num,this.pnum)
          },

          submit(){//价格，人数提交
            if(this.num==-1){
              this.pricerest=''
            }else{
              this.pricelist.map((item)=>{
                if(item.id==this.num){
                  this.pricerest=item.menuRestfulDictionary;
                }
              })
            }

            if(this.pnum==-1){
              this.peoplerest='';
            }else{
              this.peoplelist.map(item=>{
                if(item.id==this.pnum){
                  this.peoplerest=item.menuRestfulDictionary;
                }
              })
            }
            this.page=1;
            this.init();

            this.area3=false;
          },


          onAreaClick(data){//区域
            this.activeId = data.id;
            this.area1=false;
            this.arearest=data.restFul;
            this.page=1;
            this.init();
          },
          onLandClick(data){//景点
            this.activeId = data.id;
            this.area1=false;
            this.landrest=data.restFul;
            this.page=1;
            this.init();
          },
          onCookClick(data){//菜系
            this.activeId = data.id;
            this.area2=false;
            this.cookrest=data.menuRestfulDictionary;
            this.page=1;
            this.init();
          },
          area(){
            this.area2=false;
            this.area3=false;
            this.area4=false;
            this.area1=!this.area1;
          },
          group(){
            this.area3=false;
            this.area4=false;
            this.area1=false;
            this.area2=!this.area2;
          },
          weather(){
            this.area4=false;
            this.area1=false;
            this.area2=false;
            this.area3=!this.area3;
          },
          sort(){
            this.area1=false;
            this.area2=false;
            this.area3=false;
            this.area4=!this.area4;
          },

          onNavClick(index) {
            console.log(index);
            this.mainActiveIndex = index;
          },
          onItemClick(data) {
            console.log(data)
            this.activeId = data.id;
            this.area1=false;
          },
          twoSpot(index){
            this.twoNum=index;
          },
          init(){
            setTimeout(() => {
              const params={
                page:this.page,
                rows:this.rows,
                rest:this.arearest+this.landrest+this.cookrest+this.pricerest+this.peoplerest,
              };
              //列表
              this.$http.post('appServiceGrange/getGrangeFoodsData',params).then(res=>{
                if(res.msg=='success'){
                 if(this.page==1){
                   this.scenicList=res.data.rows;
                 }else{
                   this.scenicList=this.scenicList.concat(res.data.rows)
                 }
                 this.page++;
                 this.total=res.data.total;
                 this.loading=false;
                 if(this.scenicList.length>=this.total){
                   this.finished=true;
                 }

                }
              })
            },500)
          },
          condition(){
            this.$http.post('appServiceGrange/getGrangeFoodsParameter').then(res=>{
              if(res.msg=='success'){
                // this.$toast.clear();
                //美食排行
                let array=[{color:'#ff6500'},{color:'#8ab8d4'},{color:'#e38800'},{color:'#b4b4b9'},{color:'#b4b4b9'},{color:'#b4b4b9'}];
                let foodarr=[];
                res.data.foodsTop.map((item,index)=>{
                  let newitem=Object.assign(item,array[index]);
                  foodarr.push(newitem)
                })
                this.food_list=foodarr;

                //区域
                this.item1=res.data.AreaList;
                //景点
                this.landscape=res.data.areaLandList;
                //菜系
                this.cooking=res.data.delicacyList;
                //价格
                this.pricelist=res.data.foodsPriceList[0].children;
                //人数
                this.peoplelist=res.data.grangeEatingNumber[0].children;
              }
            });
          }


        },
        computed: {},
        created: function () {
          // this.$toast.loading({
          //   mask: true,
          //   message: '加载中...',
          //   duration:10000,
          // });


          this.condition();


        },
        mounted: function () {
        },

    }
</script>

